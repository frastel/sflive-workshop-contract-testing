#!/bin/bash

exists=`docker images | grep moby-dick`

if [ -z "$exists" ]; then
    docker build -t workshop/moby-dick components/moby-dick
fi

cmd=${1:-install}
app=${2:-frontend}

shift
shift

what=$@

docker run --rm -ti \
    -w /code \
    -v /etc/passwd:/etc/passwd:ro \
    -v /etc/group:/etc/group:ro \
    -v $(pwd)/components/${app}:/code \
    -v $(pwd)/.composer:/composer \
    -u $(id -u):$(id -g) \
    workshop/moby-dick composer $cmd $what
